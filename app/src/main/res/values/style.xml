<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="successToast">
        <item name="stTextColor">@android:color/background_light</item>
        <item name="stColorBackground">@color/green1</item>
        <item name="stIconStart">@drawable/icon_check</item>
        <item name="strokeColor">@color/green1</item>
        <item name="strokeWidth">3dp</item>
        <item name="stLength">LONG</item>
        <item name="dialogCornerRadius">3dp</item>
        <item name="stTextSize">16sp</item>
        <item name="stFont">@font/bmjua_font</item>
    </style>

    <style name="errorToast">
        <item name="stTextColor">@android:color/background_light</item>
        <item name="stColorBackground">@color/red</item>
        <item name="stIconStart">@drawable/icon_close_white</item>
        <item name="strokeColor">@color/red</item>
        <item name="strokeWidth">3dp</item>
        <item name="stLength">LONG</item>
        <item name="dialogCornerRadius">3dp</item>
        <item name="stTextSize">16sp</item>
        <item name="stFont">@font/bmjua_font</item>
    </style>

    <style name="warningToast">
        <item name="stTextColor">@android:color/background_light</item>
        <item name="stColorBackground">@color/orange</item>
        <item name="stIconStart">@drawable/icon_warn_white</item>
        <item name="strokeColor">@color/orange</item>
        <item name="strokeWidth">3dp</item>
        <item name="stLength">LONG</item>
        <item name="dialogCornerRadius">3dp</item>
        <item name="stTextSize">16sp</item>
        <item name="stFont">@font/bmjua_font</item>
    </style>

    <style name="messageToast">
        <item name="stTextColor">@android:color/background_light</item>
        <item name="stColorBackground">@color/violet</item>
        <item name="stIconStart">@drawable/icon_message</item>
        <item name="strokeColor">@color/violet</item>
        <item name="strokeWidth">3dp</item>
        <item name="stLength">LONG</item>
        <item name="dialogCornerRadius">3dp</item>
        <item name="stTextSize">16sp</item>
        <item name="stFont">@font/bmjua_font</item>
    </style>

    <style name="tabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/bmjua_font</item>
    </style>

</resources>