<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/modifyPwToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        app:contentInsetStart="0dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:minHeight="48dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/infoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_bold"
            android:text="비밀번호 재설정"
            android:textColor="@color/black2"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/nanum_square_extra_bold"
            android:text="현재 비밀번호"
            android:textColor="@color/black2"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/currentPwET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_border"
            android:fontFamily="@font/nanum_square_extra_bold"
            android:hint="비밀번호를 입력해주세요."
            android:padding="18dp"
            android:singleLine="true"
            android:textColor="@color/black2"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/nanum_square_extra_bold"
            android:text="새로운 비밀번호"
            android:textColor="@color/black2"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/nanum_square_extra_bold"
            android:text="8자 이상 영어, 숫자 및 특수문자를 사용하세요"
            android:textColor="@color/gray4"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/modifyPwET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_border"
            android:fontFamily="@font/nanum_square_extra_bold"
            android:hint="변경하실 비밀번호를 입력해주세요."
            android:padding="18dp"
            android:singleLine="true"
            android:textColor="@color/black2"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/modifyPwCkET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_border"
            android:fontFamily="@font/nanum_square_extra_bold"
            android:hint="@string/pwCk"
            android:padding="18dp"
            android:singleLine="true"
            android:textColor="@color/black2"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/modifyPwBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_fill_gray"
        android:enabled="false"
        android:fontFamily="@font/bmjua_font"
        android:text="@string/modifyPw"
        android:textColor="@color/white"
        android:textSize="23sp" />

</LinearLayout>