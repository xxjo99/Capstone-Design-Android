<?xml version="1.0" encoding="utf-8"?> <!-- 로그인 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/loginToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:contentInsetStart="0dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/back" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 이메일 EditText  -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:passwordToggleEnabled="false">

            <EditText
                android:id="@+id/emailET"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border_basic"
                android:fontFamily="@font/bmjua_font"
                android:hint="@string/loginemailInput"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 비밀번호 EditText -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/pwET"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border_basic"
                android:fontFamily="@font/bmjua_font"
                android:hint="@string/loginpwInput"
                android:inputType="textPassword"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 로그인 Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:backgroundTint="#87E0F6"
                android:fontFamily="@font/bmjua_font"
                android:text="@string/login"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- 회원가입, 비밀번호 찾기 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/registerTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua_font"
                android:text="@string/register"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/division"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/findPwTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua_font"
                android:text="@string/findPw"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>