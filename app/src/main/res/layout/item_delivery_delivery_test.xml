<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/storeNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua_font"
            android:text="@string/storeName"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua_font"
                android:text="@string/recruitPerson" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/recruitPersonTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua_font"
                android:text="@string/recruitPerson" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua_font"
                android:text="@string/place" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/placeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua_font"
                android:text="@string/place" />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:foregroundGravity="center"
            android:orientation="horizontal"
            android:rowCount="4">

            <Button
                android:id="@+id/delivery_1Btn"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_border_fill_gray"
                android:fontFamily="@font/bmjua_font"
                android:text="승인" />

            <Button
                android:id="@+id/delivery_2Btn"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_border_fill_gray"
                android:fontFamily="@font/bmjua_font"
                android:text="거절" />

            <Button
                android:id="@+id/delivery_3Btn"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_border_fill_gray"
                android:fontFamily="@font/bmjua_font"
                android:text="배달 시작" />

            <Button
                android:id="@+id/delivery_4Btn"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_border_fill_gray"
                android:fontFamily="@font/bmjua_font"
                android:text="배달 완료" />

        </GridLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>