<?xml version="1.0" encoding="utf-8"?> <!-- 이메일 입력 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context=".register.EmailRegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/bmjua_font"
        android:text="@string/emailInput"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <!-- 이메일 EditText -->
        <EditText
            android:id="@+id/emailET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/edit_text_border_basic"
            android:fontFamily="@font/bmjua_font"
            android:hint="@string/emailhint"
            android:inputType="textEmailAddress"
            android:padding="13dp" />

        <!-- 중복검사 Button -->
        <Button
            android:id="@+id/duplicationCkBtn"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmjua_font"
            android:text="@string/duplicateCk" />

    </LinearLayout>

    <!-- 다음 액티비티 이동 Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:fontFamily="@font/bmjua_font"
            android:text="@string/next"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>