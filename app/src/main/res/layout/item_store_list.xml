<?xml version="1.0" encoding="utf-8"?> <!-- 매장 리스트 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 매장 이미지 ImageView -->
        <ImageView
            android:id="@+id/storeIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ic_android_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 매장 이름 TextView -->
            <TextView
                android:id="@+id/storeNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/storeName"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 최소 주문 금액 TextView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minimumDeliveryPrice" />

                <TextView
                    android:id="@+id/minimumDeliveryPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/minimumDeliveryPrice" />

            </LinearLayout>

            <!-- 배달팁 TextView-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deliveryTip" />

                <TextView
                    android:id="@+id/deliveryTipTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/deliveryTip" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>